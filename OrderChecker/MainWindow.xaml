<Window x:Class="OrderChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="Instructions" HorizontalAlignment="Left" Margin="47,42,0,0" TextWrapping="Wrap" Text="Please enter a series of numbers separated by a dash: " VerticalAlignment="Top"/>
        <TextBox x:Name="UserInput" HorizontalAlignment="Left" Height="23" Margin="45,71,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="UserInput_TextChanged"/>
        <TextBox x:Name="Response" HorizontalAlignment="Left" Height="23" Margin="47,99,0,0" TextWrapping="Wrap" Text="No Answer Yet" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="CheckOrder" Content="CheckOrder" HorizontalAlignment="Left" Margin="220,71,0,0" VerticalAlignment="Top" Width="75" Click="CheckOrder_Click"/>

    </Grid>
</Window>
